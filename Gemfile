source "https://rubygems.org"

# Modern Jekyll with security fixes
gem "jekyll", "~> 4.4"
gem "nokogiri", "~> 1.18.8"

group :jekyll_plugins do
  gem 'jekyll-sitemap'
  gem 'jekyll-seo-tag'
  gem 'kramdown-parser-gfm'
end

# Development and testing
group :development, :test do
  gem 'html-proofer'
end
