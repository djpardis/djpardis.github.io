source "https://rubygems.org"

# Use Jekyll 4.4.x for security updates
gem "jekyll", "~> 4.4.0"
gem "nokogiri", "~> 1.18.0"
gem "webrick", "~> 1.7"

group :jekyll_plugins do
  gem 'jekyll-sitemap'
  gem 'jekyll-seo-tag'
  gem 'kramdown-parser-gfm'
end

# Development and testing
group :development, :test do
  gem 'html-proofer'
end
