source "https://rubygems.org"

# Use Jekyll 4.2.x which doesn't use sass-embedded
gem "jekyll", "~> 4.2.0"
gem "nokogiri", "~> 1.16.0"
gem "webrick", "~> 1.7"

group :jekyll_plugins do
  gem 'jekyll-sitemap'
  gem 'jekyll-seo-tag'
  gem 'kramdown-parser-gfm'
end

# Development and testing
group :development, :test do
  gem 'html-proofer'
end
